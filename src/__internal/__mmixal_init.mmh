#ifndef __MM_INTERNAL
#error Inclusion of internal header file __mmixal_init.mmh
#endif

#ifndef __MMIXAL
#error Inclusion of internal header file __mmixal_init.mmh for foreign assembler
#endif

#ifndef __MMIXWARE
#error Inclusion of internal header file __mmixal_init.mmh for non mmixware platform
#endif

#ifndef __MM_MMIXAL_INIT_MMH
#define __MM_MMIXAL_INIT_MMH


%
% Assemble basic library initalization code
%

            % advance LOC by #200 and further align to #100
            LOC         (@+#100)&-#100
#include <mm/__internal/__init.mmh>

            PREFIX      :MM:__INIT:
__Pos       IS          @
            PREFIX      :

%
% Register :MM:__INIT:TripHandler and :MM:__INIT:Entry:
%

            PREFIX      :MM:__INIT:
            LOC         #0
__trip      PUSHJ       $255,:MM:__INIT:TripHandler
            PUT         :rJ,$255
            GET         $255,:rB
            RESUME
            LOC         #F0
__entry     JMP         :MM:__INIT:Entry
            PREFIX      :

%
% Initialize data segment:
%

#ifndef MM_DATA_SEGMENT_ADDR
#define MM_DATA_SEGMENT_ADDR :Data_Segment+#1100000000000000
#endif

            LOC         MM_DATA_SEGMENT_ADDR
            LOC         (@+#7)&-#8
            PREFIX      :MM:__SYS:
AtExitAddr  OCTA        #0000000000000000
AtAbortAddr OCTA        #0000000000000000
AtErrorAddr OCTA        #0000000000000000
            LOC         (@+#7)&-#8
            PREFIX      :MM:__FILE:
Pool        BYTE        #EE,#EE,#EE
            LOC         @+253*1
            LOC         (@+#7)&-#8
            PREFIX      :MM:__RAND:
FileHandle  OCTA        #FFFFFFFFFFFFFFFF
            PREFIX      :MM:__INTERNAL:
Buffer      IS          @
            LOC         @+128*8
            PREFIX      :

#undef MM_DATA_SEGMENT_ADDR
#include "__strs.mmh"

            LOC         :MM:__INIT:__Pos

%
% Initialize low level memory pool implementation:
%

#include "__sys.mmh"
#include "__error.mmh"
#include "__raw_pool.mmh"

#endif /* __MM_MMIXAL_INIT_MMH */
